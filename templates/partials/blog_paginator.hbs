<link rel="stylesheet" href="/css/partials/blog_paginator.min.css">
<nav class="page-nav-container">
    <div class="page-nav">
        {{#if paginationData.prevPage}}
        {{#if_notEqual paginationData.minPage paginationData.prevPage}}
        <a class="page-num"
            href="?page={{paginationData.minPage}}{{#if paginationData.searchInfo}}&q={{paginationData.searchInfo}}{{/if}}">
            {{paginationData.minPage}}
        </a>
        <a class="page-num"
            href="?page={{paginationData.prevPage}}{{#if paginationData.searchInfo}}&q={{paginationData.searchInfo}}{{/if}}">
            <svg viewBox="0 0 448 512">
                <path fill="#77c382"
                    d="M229.9 473.899l19.799-19.799c4.686-4.686 4.686-12.284 0-16.971L94.569 282H436c6.627 0 12-5.373 12-12v-28c0-6.627-5.373-12-12-12H94.569l155.13-155.13c4.686-4.686 4.686-12.284 0-16.971L229.9 38.101c-4.686-4.686-12.284-4.686-16.971 0L3.515 247.515c-4.686 4.686-4.686 12.284 0 16.971L212.929 473.9c4.686 4.686 12.284 4.686 16.971-.001z" />
            </svg>
        </a>
        {{else}}
        <a class="page-num"
            href="?page={{paginationData.minPage}}{{#if paginationData.searchInfo}}&q={{paginationData.searchInfo}}{{/if}}">
            {{paginationData.minPage}}
        </a>
        {{/if_notEqual}}
        {{/if}}
        <a class="page-num current"
            href="?page={{paginationData.page}}{{#if paginationData.searchInfo}}&q={{paginationData.searchInfo}}{{/if}}">
            {{paginationData.page}}
        </a>
        {{#if paginationData.nextPage}}
        {{#if_notEqual paginationData.maxPage paginationData.nextPage}}
        <a class="page-num"
            href="?page={{paginationData.nextPage}}{{#if paginationData.searchInfo}}&q={{paginationData.searchInfo}}{{/if}}">
            <svg viewBox="0 0 448 512">
                <path fill="#77c382"
                    d="M218.101 38.101L198.302 57.9c-4.686 4.686-4.686 12.284 0 16.971L353.432 230H12c-6.627 0-12 5.373-12 12v28c0 6.627 5.373 12 12 12h341.432l-155.13 155.13c-4.686 4.686-4.686 12.284 0 16.971l19.799 19.799c4.686 4.686 12.284 4.686 16.971 0l209.414-209.414c4.686-4.686 4.686-12.284 0-16.971L235.071 38.101c-4.686-4.687-12.284-4.687-16.97 0z" />
            </svg> </a>
        <a class="page-num"
            href="?page={{paginationData.maxPage}}{{#if paginationData.searchInfo}}&q={{paginationData.searchInfo}}{{/if}}">
            {{paginationData.maxPage}}
        </a>
        {{else}}
        <a class="page-num"
            href="?page={{paginationData.maxPage}}{{#if paginationData.searchInfo}}&q={{paginationData.searchInfo}}{{/if}}">
            {{paginationData.maxPage}}
        </a>
        {{/if_notEqual}}
        {{/if}}
    </div>
    <div class="page-goto">
        <form class="goto">
            {{#if paginationData.searchInfo}}
            <input type="text" name="q" hidden value="{{paginationData.searchInfo}}" required>
            {{/if }}
            <input name="page" type="number" placeholder="To Page..." required max="{{paginationData.maxPage}}"
                min="{{paginationData.minPage}}">
            <button type="submit">Go</button>
        </form>
    </div>
</nav>