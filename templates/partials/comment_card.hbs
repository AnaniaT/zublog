{{!-- IS UNSECCSARILY REPATED SO MOVED TO PARENT TEMPLATE --}}
<div class="comment-box">
    <div class="pic">
        {{#if author.avatar}}
        <img src="/account/avatar/{{author._id}}" alt="{{author.username}}">
        {{else}}
        <svg viewBox="0 0 448 512">
            <path fill="#77c382"
                d="M224 256c70.7 0 128-57.3 128-128S294.7 0 224 0 96 57.3 96 128s57.3 128 128 128zm89.6 32h-16.7c-22.2 10.2-46.9 16-72.9 16s-50.6-5.8-72.9-16h-16.7C60.2 288 0 348.2 0 422.4V464c0 26.5 21.5 48 48 48h352c26.5 0 48-21.5 48-48v-41.6c0-74.2-60.2-134.4-134.4-134.4z">
            </path>
        </svg>
        {{/if}}
    </div>
    <div class="comment-info">
        <div class="txt-data">
            <a class="username" href="/{{author.username}}/profile">{{author.username}}</a>
            {{body}}
        </div>
        {{#if_Equal post.author._id user._id }}
        <div class="foot owned">
            <div class="comment-del-btn" data-commentid="{{_id}}">
                <svg viewBox="0 0 448 512">
                    <path fill="#77c382"
                        d="M432 32H312l-9.4-18.7A24 24 0 0 0 281.1 0H166.8a23.72 23.72 0 0 0-21.4 13.3L136 32H16A16 16 0 0 0 0 48v32a16 16 0 0 0 16 16h416a16 16 0 0 0 16-16V48a16 16 0 0 0-16-16zM53.2 467a48 48 0 0 0 47.9 45h245.8a48 48 0 0 0 47.9-45L416 128H32z" />
                </svg>
                <span>remove</span>
            </div>
            <div class="date">{{toDateString createdAt}}</div>
        </div>
        {{else}}
        {{#if_Equal author._id user._id }}
        <div class="foot owned">
            <div class="comment-del-btn" data-commentid="{{_id}}">
                <svg viewBox="0 0 448 512">
                    <path fill="#77c382"
                        d="M432 32H312l-9.4-18.7A24 24 0 0 0 281.1 0H166.8a23.72 23.72 0 0 0-21.4 13.3L136 32H16A16 16 0 0 0 0 48v32a16 16 0 0 0 16 16h416a16 16 0 0 0 16-16V48a16 16 0 0 0-16-16zM53.2 467a48 48 0 0 0 47.9 45h245.8a48 48 0 0 0 47.9-45L416 128H32z" />
                </svg>
                <span>remove</span>
            </div>
            <div class="date">{{toDateString createdAt}}</div>
        </div>
        {{else}}
        <div class="foot">
            <div class="date">{{toDateString createdAt}}</div>
        </div>
        {{/if_Equal}}
        {{/if_Equal}}
    </div>
</div>